{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "max-classes-per-file": 0,
    "linebreak-style": 0,
    "no-unused-vars": "warn"
  },
  "ignorePatterns": ["dist/", "build/"]
}
